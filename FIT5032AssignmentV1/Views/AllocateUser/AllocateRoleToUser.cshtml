
@{
    ViewBag.Title = "AllocateRoleToUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <h2>Role Add to User</h2>
    


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-horizontal">

            <div class="form-group">
                <div class="col-md-10">
                    <label class="control-label col-md-2">User Name</label>
                    <br>
                    @Html.Editor("UserName")
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label class="control-label col-md-2">Role Name</label>
                    @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>
                        )ViewBag.Roles, "Select ...", htmlAttributes: new { @class = "form-control", required = "requied" })
                      
                </div>
            </div>

            <div class="form-group">
                <div class=" col-md-offset-2 col-md-10">
                    <input type="submit" value="Add Role" class="btn btn-default" />
                </div>
            </div>

        </div>

    }

    <!-- JS includes -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>

    <script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
    <script src="//ajax.aspnetcdn.com/ajax/mvc/4.0/jquery.validate.unobtrusive.min.js"></script>

    @if (ViewBag.ResultMessage != null)
    {
        <text>
            <script>
                    $(document).ready(function () {
                        alert('@ViewBag.ResultMessage');
                     });
            </script>
        </text>
    }
